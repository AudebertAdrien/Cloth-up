  <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<div class="container">
<div class="row">
<div class="col-sm-1">
<div class="thumbnail">
<%if User.find(comment.author).avatar.attached?%>
            <%= image_tag User.find(comment.author).avatar, class:"img-responsive user-photo" ,alt: 'avatar' %>
          <%else%>
            <%=image_tag("avatar.jpg", alt: 'avatar', class:"img-responsive user-photo" ) %>
          <%end%>
</div><!-- /thumbnail -->
</div><!-- /col-sm-1 -->

<div class="col-sm-5">
<div class="panel panel-default">
<div class="panel-heading">
<strong><%= User.find(comment.author).first_name %> <%= User.find(comment.author).last_name %></strong> <span class="text-muted"><h5>Submitted <%= time_ago_in_words(comment.created_at) %> ago</h5></span>
</div>
<div class="panel-body">
<%= comment.body %>
</div><!-- /panel-body -->
</div><!-- /panel panel-default -->
</div><!-- /col-sm-5 -->
</div><!-- /panel panel-default -->
</div>




