<tr>
    <td>
        <%if item.picture.attached?%>
            <%= image_tag item.picture, alt: 'picture' %>
        <% else %>
            <%=image_tag("product/product1.png", class: "card-img", alt: 'product1') %>
        <% end %>
    </td>
    <td>
        <p><%= item.title%>
        <% item.categories.each do |category| %>
        <%=  category.name %>
       <% end %>
        </p>
    </td>
    <td>
        <h5><%= item.price %></h5>
    </td>
    <td>
            <% @item_order.each do |i| %>
            <% if i.item_id === item.id %>  
                <h5><%= i.quantity %></h5>
                <%end%>
            <% end %> 
    </td>
    <td>
        <%= link_to order_path(item), method: :delete do %>
        <span style="font-size: 1em; color: red;">
            <i class="fas fa-times"></i>
        </span>
        <% end %>
    </td>
</tr>