	<!-- ================ end banner area ================= -->
  
  <!--================Login Box Area =================-->
	<section class="login_box_area section-margin">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<div class="hover">
							<h4>Want to log out?</h4>
							<p>Press the button below </p>
                  
							<%= link_to('Logout', destroy_user_session_path, method: :delete, class: "button button-account") %>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner register_form_inner">
						<h3>Update account</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'row login_form', id:"register_form") do |f| %>
           <%= render "devise/shared/error_messages", resource: resource %>	



 	          <div class="col-md-12 form-group">
              <%= f.label :avatar, "Avatar" %><br />
              <%= f.file_field :avatar, class: "form-control", placeholder:"Upload Avatar" %>		
              </div>



           	<div class="col-md-12 form-group">
              <%= f.label :first_name, "First Name" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder:"First Name", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'First Name'" %>		
              </div>

              <div class="col-md-12 form-group">
              <%= f.label :last_name, "Last Name" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder:"Last Name", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Last Name'" %>		
              </div>

              	<div class="col-md-12 form-group">
              <%= f.label :date_of_birth, "Date of Birth" %><br />
          <%= f.date_select :date_of_birth, autofocus: true, autocomplete: "date_of_birth", class: "form-control" %>		
              </div>

              	<div class="col-md-12 form-group">
              <%= f.label :address, "Address" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", placeholder:"Address", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Address'" %>		
              </div>

               	<div class="col-md-12 form-group">
              <%= f.label :zip_code, "Zip Code" %><br />
          <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", class: "form-control", placeholder:"Zip Code", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Zip Code'" %>		
              </div>

              <div class="col-md-12 form-group">
              <%= f.label :city, "City" %><br />
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "form-control", placeholder:"City", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'City'" %>		
              </div>
           						
							<div class="col-md-12 form-group">
              <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email Address", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Email Address'" %>		
              </div>
              <div class="col-md-12 form-group">
              <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control",placeholder:"Password", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Password'" %>
              </div>
              <div class="col-md-12 form-group">
              <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Confirm Password", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Confirm Password'" %>
							</div>
                <div class="col-md-12 form-group">
              <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "current_password", class: "form-control", placeholder:"Current Password", onfocus:"this.placeholder = ''", onblur:"this.placeholder = 'Current Password'" %>
							</div>
							<div class="col-md-12 form-group action">
               <%= f.submit "Update" , class:"button button-register w-100" %>
							</div>
					<% end %>
      <%= render "devise/shared/links" %>
					</div>
          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================--> 